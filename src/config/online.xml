<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/projetcesi</property>
  <property name="hibernate.connection.username">cesi</property>
  <property name="hibernate.connection.password">cesi</property>
  <property name="hibernate.connection.pool_size">1</property>
  <property name="show_sql">true</property>
  <property name="format_sql">true</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <mapping class="models.Utilisateur"/>
  <mapping class="models.Client"/>
  <mapping class="models.Suivdossier"/>
  <mapping class="models.Demande"/>
  <mapping class="models.Devis"/>
  <mapping class="models.Commande"/>
  <mapping class="models.DetailCommande"/>
  <mapping class="models.GetAlerte"/>
</session-factory>
</hibernate-configuration>
